{{- 'product-list.css' | asset_url | stylesheet_tag -}}

{%- liquid
  assign section_width = section.settings.section_width
  assign disable_top_spacing = section.settings.disable_top_spacing
  assign disable_bottom_spacing = section.settings.disable_bottom_spacing
-%}

<div class="{{ section_width }} product__list--wrap" id="section--{{ section.id }}">
  <div class="section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}">
    <div class="image__wrap">
      {% if image %}
        {%- liquid
          assign small_width = image.src.height | times: '375' | divided_by: image.src.width
          assign master_width = image.src.width | append: 'x' | append: image.src.height
          assign width = '375x' | append: small_width | append: ',' | append: master_width
          assign class = ''
        -%}
        {%- render 'responsive-image', image: image, sizes: width, class: class -%}
      {% else %}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder_svg_tag' }}
      {% endif %}
    </div>
    <div class="block__header">
      {% if block.settings.heading != blank %}
        <h3 class="{{ block.settings.heading_size }} heading" {{ block.shopify_attributes }} style="color: {{ block.settings.heading_color }}">{{ block.settings.heading | newline_to_br }}</h3>
      {% endif %}
      {% if block.settings.subheading != blank %}
        <p class="caption" {{ block.shopify_attributes }}>{{ block.settings.subheading }}</p>  
      {% endif %}
    </div>
    {% if block.settings.text != blank %}
      <div class="block__description">
        <div class="description body-1" {{ block.shopify_attributes }} style="color: {{ block.settings.text_color }}">{{ block.settings.text }}</div>
      </div>
    {% endif %}
    {% if block.settings.button_link != blank %}
      <div class="block__buttons">
        <a class="btn {{ block.settings.mobile_button_style }}" href="{{ block.settings.button_link }}" role="button" title="{{ block.settings.button_text | escape }}" {{ block.shopify_attributes }}><span>{{ block.settings.button_text }}</span></a>        
      </div>
    {% endif %}
  </div>
</div>


{% style %}
  {% for block in section.blocks %}
    
    #section--{{ section.id }} .caption {
      color: {{ block.settings.caption_color | color_modify: 'alpha', 0.80 }}
    }
  
    @media screen and (max-width: 767px) { 
  
      #section--{{ section.id }} .caption {
        color: {{ block.settings.caption_color | color_modify: 'alpha', 0.60 }}
      }
      
    }
  {% endfor %}
{% endstyle %}

{% schema %}
{
  "name": "Product List",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "full-width-row",
          "label": "Full width"
        },
        {
          "value": "full-width-row-full",
          "label": "Full width, no spacing"
        }
      ],
      "default": "grid",
      "label": "Section width"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image",
      "info": "2800 x 650 .jpg recommended."
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "checkbox",
      "id": "disable_top_spacing",
      "default": false,
      "label": "Remove top spacing"
    },
    {
      "type": "checkbox",
      "id": "disable_bottom_spacing",
      "default": false,
      "label": "Remove bottom spacing"
    }
  ],
  "blocks": [
    {
      "type": "subheading",
      "name": "Subheading",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "subheading"
        },
        {
          "type": "color",
          "id": "caption_color",
          "label": "Color",
          "default": "#fff"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Text",
          "default": "Add a tagline"
        },
        {
          "type": "header",
          "content": "Heading"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Color",
          "default": "#fff"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Text",
          "default": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h1__large",
              "label": "Large"
            },
            {
              "value": "h1-xlarge",
              "label": "Extra large"
            }
          ],
          "default": "h1-xlarge"
        },
        {
          "type": "header",
          "content": "Text"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Color",
          "default": "#fff"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Content",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
        },
        {
          "type": "header",
          "content": "Buttons"
        },
        {
          "id": "button_text",
          "type": "text",
          "label": "Button label",
          "default": "Shop Now",
          "info": "Leave the label blank to hide the button."
        },
        {
          "id": "button_link",
          "type": "url",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Desktop Button Style",
          "options": [
            {
              "value": "btn--white",
              "label": "White Button"
            },
            {
              "value": "btn--gray",
              "label": "Gray Button"
            },
            {
              "value": "btn--gold",
              "label": "Gold Button"
            },
            {
              "value": "btn--light-gold",
              "label": "Light Gold Button"
            },
            {
              "value": "btn--outline",
              "label": "Gray Outline Button"
            }
          ],
          "default": "btn--white"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Product List"
    }
  ]
}
{% endschema %}
